mixin menuLink(title, herf= '#')
	li.header-menu-item 
		a.header-menu-link(href= herf)= title

mixin headerBottomItem(number, text)
	.header-bottom-item
		span.header-bottom-number= number
		span.header-bottom-text= text

mixin blockBox(caption, title, desc)
	.block-box
		h3.block-box-caption= caption 
		h2.block-box-heading= title 
		if desc 
			p.block-box-desc= desc

mixin aboutItem(src, title, iconClass, alt='')
	.about-item
		img.about-img(src=src alt=alt)
		.about-content
			i.about-icon(class= iconClass)
			span.about-title= title

mixin serviceItem(src, title, desc)
	.service-item
		img.service-item-icon(src=src)
		.service-item-info 
			h3.service-item-title= title 
			p.service-item-desc= desc

mixin wedoItem(src, title, text, active='')
	.wedo-item.wedo-item(class= active)
		.wedo-item-header
			img.wedo-item-icon(src= src)
			h3.wedo-item-title= title
			i.fal.fa-angle-up.wedo-item-arrow
		.wedo-item-content
			.wedo-item-text= text

mixin quoteItem(src='../images/img-quote.png', type=false, author='Jon Doe', desc='Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime minima sit quod omnis debitis tenetur tempore possimus distinctio quo, sequi beatae porro')
	.quote-item
		if type == false
			.quote-icon
				img(src= src)
		else
			.quote-image
				img(src= src)

		.quote-info 
			p.quote-desc= desc
			span.quote-author= author

mixin teamSocial(facebook='#', twitter='#', pinterest='#', instagram='#')
	ul.team-social 
		li.team-social-item
			a.team-social-link(href= facebook)
				i.fab.fa-facebook-f
		li.team-social-item
			a.team-social-link(href= twitter)
				i.fab.fa-twitter
		li.team-social-item
			a.team-social-link(href= pinterest)
				i.fab.fa-pinterest
		li.team-social-item
			a.team-social-link(href= instagram)
				i.fab.fa-instagram

mixin teamItem(src='#', name='Noname', position='None')
	.team-item
		.team-main
			img.team-image(src= src) 
			.team-content 
				if block
					block
		.team-info
			h3.team-name= name
			span.team-position= position

mixin workItem(src='https://images-cdn.9gag.com/photo/aB2Q1G1_700b.jpg', icon='fa fa-home', title='None Title', text='Lorem ipsum dolor', full='')
	.work-item(class= full)
		img.work-image(src= src)
		.work-content
			i.work-icon(class= icon)
			h3.work-title= title
			span.work-desc.text.text--light.text-italic= text

mixin peopleItem(src='https://via.placeholder.com/150', name='No Name', job='No Job', desc='')
	li.people-item 
		img.people-avt(src= src)
		.people-info
			h3.people-name= name
			span.people-job.text.text--italic= job
			p.people-desc.text= desc

mixin storyItem(src='', title='Lorem ipsum dolor sit amet, consectetur adipisicing elit', desc='Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquid architecto velit iure corporis aliquam!', dateNum='15', dateText='June', viewCount='542', commentCount='7')
	li.story-item
		.story-media 
			img.story-image(src= src)
			.story-date
				span.story-date-number= dateNum
				span.story-date-text.text= dateText
		h3.story-title= title
		.story-desc.text 
			p.story-desc-inner= desc
		.story-meta
			.story-meta-item.text
				i.story-meta-icon.fa.fa-eye
				span.story-meta-count= viewCount
			.story-meta-item.text
				i.story-meta-icon.fa.fa-comment
				span.story-meta-count= commentCount